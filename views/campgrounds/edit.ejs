<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
    
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
                <div class="mb-3">
                <label for="title" class="form-label" >Title</label>
                <input type="text" id="title" name="campground[title]" class="form-control" value="<%=campground.title%>">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="campground[location]" id="location" class="form-control" value="<%=campground.location%>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" name="campground[image]" id="image" class="form-control" value="<%=campground.image%>">
                    </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="campground[price]" value="<%=campground.price%>"aria-label="price" aria-describedby="price-label">
                      </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="campground[description]" id="description" class="form-control"><%=campground.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>
        
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>